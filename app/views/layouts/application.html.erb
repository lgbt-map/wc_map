      <%# <div class="container-fluid">
        <div class="row">
          <div class="col-sm-3"> %>
            <%#= link_to "", "#", class: "fas fa-plus"%>
          <%# </div> %>
          <%# <div class="col-sm-3"> %>
            <%#= link_to "B", "#"%>
          <%# </div> %>
          <%# <div class="col-sm-3"> %>
            <%#= link_to "C", "#"%>
          <%# </div> %>
          <%# <div class="col-sm-3"> %>
            <%#= link_to "", "#", class: "fas fa-search" %>
          <%# </div> %>
        <%# </div> %>
      <%# </div> %>
    <%# </footer> %>
  </body>
</html>
